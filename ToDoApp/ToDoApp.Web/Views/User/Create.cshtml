@model UserDTO
@{
    ViewData["Title"] = "Create";
}

<h1>Kullanıcı Ekle</h1>

<div class="row">
    <div class="col-md-4">
        <form  asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label asp-for="Name">Ad</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>

                <label asp-for="LastName">Soyad</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>

                <label asp-for="UserName">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName"></span>

                <label asp-for="HomeId">Ev</label>
                <select asp-for="HomeId" class="form-control" asp-items="@(new SelectList(@ViewBag.Home,"Id","Name"))"></select>
                <span asp-validation-for="HomeId"></span>

                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password"></span>

            </div>
            <div class="form-group">
                <input  type="submit" value="Ekle" class="btn btn-primary"/>
            </div>

        </form>

    </div>

</div>
